    <DockPanel>
        <Panel Margin="5" DockPanel.Dock="Bottom">
            <Grid ColumnDefinitions="*, *, *">
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="StartProcessingButton_OnClick">_Start processing</Button>
                    <Button ToolTip.Tip="Configuration">
                        <Panel>
                            <PathIcon Data="{StaticResource SettingsRegular}" />
                        </Panel>
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuItem Header="CHD operations">
                                    <RadioButton GroupName="Chd" Name="RadioButtonDontGenerate" Tag="DontGenerate"
                                                 Click="CheckBox_OnClick">
                                        Don't generate CHDs
                                    </RadioButton>
                                    <RadioButton GroupName="Chd" Name="RadioButtonGenerateMissing"
                                                 Tag="GenerateMissing" Click="CheckBox_OnClick">
                                        Generate only missing
                                    </RadioButton>
                                    <RadioButton GroupName="Chd" Name="RadioButtonGenerateAll" Tag="GenerateAll"
                                                 Click="CheckBox_OnClick">
                                        Generate all (overwrite existing)
                                    </RadioButton>
                                </MenuItem>
                                <CheckBox Name="CheckBoxProcessModified" IsThreeState="False" Click="CheckBox_OnClick">Process only modified enties</CheckBox>
                                <CheckBox Name="CheckBoxOverwriteReadme" IsThreeState="False" Click="CheckBox_OnClick">Overwrite existing READMEs</CheckBox>
                                <CheckBox Name="CheckBoxGetTitleFromCue" IsThreeState="False" Click="CheckBox_OnClick">Get game title from CUE file name</CheckBox>
                                <CheckBox Name="CheckBoxGameIdAsChdName" IsThreeState="False" Click="CheckBox_OnClick">Use Game ID as name for CHD file</CheckBox>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="ButtonUpdate" Click="ButtonUpdate_OnClick" ToolTip.Tip="New version available!" IsVisible="False">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Name="TextBlockUpdate">New version 0.0.0</TextBlock>
                            <PathIcon Data="{StaticResource Important}" />
                        </StackPanel>
                    </Button>
                    <Button Click="ButtonDiscord_OnClick" ToolTip.Tip="Discord">
                        <Panel>
                            <PathIcon Data="{StaticResource DiscordIcon}" />
                        </Panel>
                    </Button>
                    <Button Click="ButtonHelp_OnClick" ToolTip.Tip="Help">
                        <Panel>
                            <PathIcon Data="{StaticResource QuestionCircle}" />
                        </Panel>
                    </Button>
                </StackPanel>
            </Grid>
        </Panel>
        <StackPanel DockPanel.Dock="Top" Margin="5">
            <Label Target="TextBoxOutputDirectory">Output directory:</Label>
            <DockPanel>
                <Button DockPanel.Dock="Right" Click="SelectOutputFolderButton_OnClick">S_elect</Button>
                <TextBox Name="TextBoxOutputDirectory" TextInput="TextBoxOutputDirectory_OnTextInput" Margin="0 0 5 0"></TextBox>
            </DockPanel>
        </StackPanel>
        <TabControl DockPanel.Dock="Bottom" SelectionChanged="DataGridGameList_OnSelectionChanged">
            <TabItem Header="Info">
                <StackPanel>
                    <Label Target="TextTitle" Content="Title"></Label>
                    <TextBox Name="TextTitle" AcceptsReturn="False" Watermark="Enter game name">
                    </TextBox>
                    <Label Target="TextDescription" Content="Description"></Label>
                    <TextBox Name="TextDescription" AcceptsReturn="True" MinLines="5" TextWrapping="Wrap"
                             Watermark="Enter game description">
                    </TextBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Data">
                <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*,Auto">
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                        <Label>CHDMan version:</Label>
                        <Label Name="LabelChdManVersion">0</Label>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <Label>File version:</Label>
                        <Label Name="LabelFileVersion">0</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label>SHA1:</Label>
                        <Label Name="LabelSha1">0</Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label>Data SHA1:</Label>
                        <Label Name="LabelDataSha1">0</Label>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label>Track info:</Label>
                        <TextBox Name="TextBoxTrackInfo" IsReadOnly="True" MaxLines="5"></TextBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <DockPanel Margin="5">
            <StackPanel DockPanel.Dock="Right">
                <Button Click="AddButton_OnClick" ToolTip.Tip="Insert">_Add</Button>
                <Button Click="AddFolderButton_OnClick" ToolTip.Tip="Ctrl+Insert">Add _folder</Button>
                <Button Click="DeleteButton_OnClick" ToolTip.Tip="Delete">_Delete</Button>
                <Button Click="ClearButton_OnClick" ToolTip.Tip="Ctrl+Delete">_Clear all</Button>
            </StackPanel>
            <DataGrid Name="DataGridGameList" AutoGenerateColumns="True" GridLinesVisibility="All"
                      CanUserReorderColumns="True" CanUserResizeColumns="True" IsReadOnly="True" BorderThickness="1"
                      Margin="5" DockPanel.Dock="Left"
                      SelectionMode="Single"
                      AutoGeneratingColumn="DataGridGameList_OnAutoGeneratingColumn"
                      LoadingRow="DataGridGameList_OnLoadingRow"
                      KeyUp="DataGridGameList_OnKeyUp"
                      SelectionChanged="DataGridGameList_OnSelectionChanged">
                <DataGrid.ContextFlyout>
                    <MenuFlyout>
                        <MenuItem Name="MenuItemShowReadme" Header="Show README" Click="MenuItemShowReadme_OnClick" />
                        <MenuItem Name="MenuItemOpenFolder" Header="Open output folder"
                                  Click="MenuItemOpenFolder_OnClick" />
                    </MenuFlyout>
                </DataGrid.ContextFlyout>
            </DataGrid>
        </DockPanel>
    </DockPanel>
</Window>